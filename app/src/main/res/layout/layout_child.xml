<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="wrap_content">

    <CheckBox

        android:id="@+id/competition_child_checkbox"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/mainLeftRightPaddingChild"
        android:textSize="@dimen/checkbox_circle" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="@dimen/mainLeftRightPadding"
        android:layout_marginStart="@dimen/mainLeftRightPadding"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/competition_child_checkbox"
        android:animateLayoutChanges="true"
        android:orientation="vertical"
        android:weightSum="3">


        <TextView
            android:text="22:45"
            android:id="@+id/match_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="@dimen/gameViewListItemMarginLeftRight"
            android:layout_marginStart="@dimen/gameViewListItemMarginLeftRight"
            android:layout_weight="1"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textColor="#7b8191"
            android:textSize="16sp" />

        <TextView
            android:text="Juventus FC"
            android:id="@+id/team_1_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/gameViewListItemMarginLeftRight"
            android:layout_marginStart="@dimen/gameViewListItemMarginLeftRight"
            android:layout_weight="1"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textColor="#979aa4"
            android:textSize="16sp" />

        <TextView
            android:text="Real Madrid"
            android:id="@+id/team_2_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/gameViewListItemMarginLeftRight"
            android:layout_marginStart="@dimen/gameViewListItemMarginLeftRight"
            android:layout_weight="1"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textColor="#979aa4"
            android:textSize="16sp" />


    </LinearLayout>

</RelativeLayout>