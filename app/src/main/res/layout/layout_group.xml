<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/listviewItemHeight">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/mainLeftRightPadding"
        android:layout_marginStart="@dimen/mainLeftRightPadding"
        android:animateLayoutChanges="true"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/region_checkbox"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:textSize="@dimen/checkbox_circle" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:text="Saturday, 3 June 2017"
                android:id="@+id/title_region"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="5dp"
                android:layout_marginLeft="@dimen/textBig"
                android:layout_marginRight="5dp"
                android:layout_marginStart="@dimen/textBig"
                android:ellipsize="marquee"
                android:maxLines="2"
                android:textColor="#7b8191"
                android:textSize="16sp" />


        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>